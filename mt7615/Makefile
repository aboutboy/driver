include $(INCLUDE_DIR)/package.mk

define KernelPackage/mt7615
  CATEGORY:=Ralink
  TITLE:=Ralink MT7615 AP driver
  FILES:=$(PKG_BUILD_DIR)/mt7615_ap/mt7615.ko
  AUTOLOAD:=$(call AutoLoad,91,mt7615)
  MENU:=1
endef

define KernelPackage/mt7615/config
	source "$(SOURCE)/Config-mt7615.in"
endef

define Build/Prepare
	mkdir -p $(PKG_BUILD_DIR)
	$(CP) ./src/* $(PKG_BUILD_DIR)/
	$(call Build/Prepare/Default)
endef

#		NOSTDINC_FLAGS="-I$(STAGING_DIR)/usr/include/mac80211-backport/uapi -I$(STAGING_DIR)/usr/include/mac80211-backport \
#			-I$(STAGING_DIR)/usr/include/mac80211/uapi -I$(STAGING_DIR)/usr/include/mac80211 \
#			-include backport/backport.h \
#			-Wno-unused-variable -Wno-unused-function \
#			-Wno-return-type" \
#


NOSTDINC_FLAGS = \
	-I$(LINUX_DIR)/net/nat/hw_nat/ 
	
# TARGET_CFLAGS += \
# 	-I$(LINUX_DIR)/net/nat/hw_nat/

define Build/Compile
	$(MAKE) -C "$(LINUX_DIR)" V=1 \
		CROSS_COMPILE="$(TARGET_CROSS)" \
		ARCH="$(LINUX_KARCH)" \
		RT_DRV_DIR="$(PKG_BUILD_DIR)/mt7615" \
		RT_DRV_PATH="../mt7615" \
		RT_DRV_NAME="mt7615" \
		SUBDIRS="$(PKG_BUILD_DIR)/mt7615_ap/" \
		$(foreach c, $(PKG_KCONFIG),$(if $(CONFIG_$c),CONFIG_$(c)=$(CONFIG_$c)))\
		NOSTDINC_FLAGS="$(NOSTDINC_FLAGS)" \
		modules
endef

define KernelPackage/mt7615/install
	$(INSTALL_DIR) $(1)/lib/wifi
	$(INSTALL_DIR) $(1)/lib/firmware
	$(INSTALL_DIR) $(1)/etc_ro/Wireless/
# 	$(INSTALL_DATA) ./files/MT7615E_EEPROM_2G.bin $(1)/etc_ro/Wireless/
# 	$(INSTALL_DATA) ./files/MT7615E_EEPROM_5G.bin $(1)/etc_ro/Wireless/

	echo -------------------------------------------------------------------$(CONFIG_RT_FIRST_CARD) $(CONFIG_RT_SECOND_CARD)

endef

$(eval $(call KernelPackage,mt7615))
